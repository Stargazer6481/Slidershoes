<Window x:Class="Slidershoes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slidershoes" Height="550" Width="750" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White" ResizeMode="CanMinimize">

    <Grid Margin="20">
        <!-- Header -->
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="SLIDERSHOES" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#f78036"/>
            <TextBlock Text="Virtual Foot Controller" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#AAAAAA"/>
        </StackPanel>

        <!-- Main Grid -->
        <Grid Margin="0,100,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Controls Panel -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,20,0">
                <CheckBox x:Name="LockMouseCheckBox" Content="Lock Mouse to Center" FontSize="16" Margin="0,0,0,20"/>
                <TextBlock Text="Joystick Sensitivity" FontSize="16" Margin="0,0,0,5"/>
                <Slider x:Name="SensitivitySlider" Minimum="50" Maximum="500" Value="200" Width="200" TickFrequency="50" IsSnapToTickEnabled="True"
                        Background="#333333" Foreground="#f78036" Height="20"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button x:Name="StartButton" Content="START" Width="120" Height="45" Background="#f78036" Foreground="#1E1E1E" FontWeight="Bold" Margin="0,0,10,0" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="StopButton" Content="STOP" Width="120" Height="45" Background="#FF5555" Foreground="#1E1E1E" FontWeight="Bold" IsEnabled="False" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <TextBlock x:Name="StatusText" Text="Status: Stopped" FontSize="16" FontWeight="Bold" Margin="0,30,0,0"/>
            </StackPanel>

            <!-- Joystick Preview Panel -->
            <Canvas Grid.Column="1" Background="#2E2E2E" Width="320" Height="320" HorizontalAlignment="Center" VerticalAlignment="Top" ClipToBounds="True" x:Name="JoystickCanvas">
                <Ellipse Width="320" Height="320" Stroke="#f78036" StrokeThickness="4"/>
                <!-- Thumb Indicator -->
                <Ellipse Width="30" Height="30" Fill="#f78036" x:Name="ThumbIndicator"/>
            </Canvas>
        </Grid>
    </Grid>
</Window>
